= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .input-field
    = f.label :title
    = f.text_field :title
  .input-field
    = f.label :body
    = f.text_area :body, class: 'materialize-textarea'
  .input-field
    = f.label :image
    = f.file_field :image
  .actions.center
    = f.hidden_field :author, value: current_user.id
    = f.submit 'Save', class: 'btn-large'
